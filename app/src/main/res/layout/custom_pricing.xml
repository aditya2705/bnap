<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    tools:context="com.alphalabz.businessapp.Fragments.PricingFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/offers1_card_view"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:paddingBottom="5dp"
            card_view:cardBackgroundColor="@color/md_white_1000"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/md_light_green_A400"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Standard"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="@color/md_white_600"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_5sdp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@color/md_grey_400"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$39"
                        android:textSize="@dimen/_25sdp"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_8sdp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PER USER/MONTH"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/_3sdp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INCLUDES"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center_horizontal"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/md_light_green_A400"
                    android:layout_marginBottom="@dimen/_2sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/md_light_green_A400"
                    android:layout_marginBottom="@dimen/_2sdp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/standard_feature"
                    android:layout_marginLeft="@dimen/_10sdp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="START "
                    android:background="@color/md_light_green_A400"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>







    </LinearLayout>
</FrameLayout>
