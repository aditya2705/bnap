<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval" >
            <solid android:color="@color/md_white_900"/>
            <stroke android:color="@color/md_red_A700" android:width="@dimen/_3sdp"/>
            <size android:width="@dimen/_26sdp" android:height="@dimen/_26sdp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="@color/md_white_900"/>
            <stroke android:color="@color/md_blue_grey_100" android:width="@dimen/_2sdp"/>
            <size android:width="@dimen/_26sdp" android:height="@dimen/_26sdp" />
        </shape>
    </item>


</selector>