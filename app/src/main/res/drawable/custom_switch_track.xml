<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/md_white_1000"/>

            <stroke android:color="@color/md_blue_grey_100" android:width="@dimen/_2sdp"/>
            <corners android:radius="@dimen/_20sdp"/>
            <size android:width="@dimen/_10sdp" android:height="@dimen/_30sdp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/md_red_A700"/>
            <stroke android:color="@color/md_red_A700" android:width="@dimen/_2sdp"/>
            <corners android:radius="@dimen/_20sdp"/>
            <size android:width="@dimen/_10sdp" android:height="@dimen/_30sdp"/>
        </shape>
    </item>
</selector>