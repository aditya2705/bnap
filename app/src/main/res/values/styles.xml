<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_red_700</item>
        <item name="colorPrimaryDark">@color/md_red_800</item>
        <item name="colorAccent">@color/md_red_700</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:popupMenuStyle">@style/OptionsMenu</item>
        <item name="android:actionModeBackground">@color/md_red_800</item>
        <item name="actionModeBackground">@color/md_red_800</item>
    </style>

    <style name="CustomTheme" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <!-- ...and here we setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/md_red_700</item>
        <item name="colorPrimaryDark">@color/md_red_800</item>
        <item name="colorAccent">@color/md_red_700</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
        <item name="android:itemTextAppearance">@style/menuItemColor</item>
        <item name="actionOverflowMenuStyle">@style/OptionsMenu</item>
        <item name="actionMenuTextColor">@color/md_white_1000</item>


        <item name="android:windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:popupMenuStyle">@style/OptionsMenu</item>
        <item name="android:actionModeBackground">@color/md_red_800</item>
        <item name="actionModeBackground">@color/md_red_800</item>


        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/md_grey_300</item>
        <item name="material_drawer_selected_text">@color/md_red_800</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_header_selection_text
        </item>

    </style>


    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorSecondary">#fff</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="WhiteActionBarThemeOverlay" parent=""></style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/md_red_800</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="Widget.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#fff</item>
    </style>

    <style name="menuItemColor">
        <item name="android:textColor">@color/md_red_800</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/md_white_1000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />


    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>

</resources>
